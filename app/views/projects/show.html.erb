<% content_for :title, "WhatsTheDiff | Project #{@project.id}" %>

<div class="row">
  <div class="text-center"><h1>Project Page</h1></div>
</div>

<%if flash[:notice] %>
  <div data-alert class="alert-box alert">
    <%= flash[:notice] %>
  </div>
<%end%>

<div class="row">
  <div class="small-4 columns">
    <h4>User: <%= @user.full_name %></h4>
  </div>

  <div class="small-4 columns">
    <h4><strong>Request someone share an email list</strong></h4>
    <%= form_for :project, url: add_target_user_projects_path do |f| %>
      <%= f.fields_for :user do |form| %>
        <%= form.text_field :email %>
      <%end%>

      <%= f.hidden_field :id, value: @project.id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="small-4 columns"></div>

  <div class="small-4 columns"></div>

  <div class="small-4 columns"></div>
</div>